<%= form_for(@furniture_spare) do |f| %>
  <% if @furniture_spare.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@furniture_spare.errors.count, "error") %> prohibited this furniture_spare from being saved:</h2>

      <ul>
      <% @furniture_spare.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Spare_Part_ID %><br>
    <%= f.text_field :SparePartID %>
  </div>
  <div class="field">
    <%= f.label :Spare_Part_Name %><br>
    <%= f.text_field :SparePartName %>
  </div>
  <div class="field">
    <%= f.label :Material %><br>
   <!-- <%= f.text_field :Material %> -->
    <p>
    <p>
      <%= f.radio_button :Material, 'metal' %>Metal Unshakable
    </p>
    <p>
      <%= f.radio_button :Material, 'plastic' %>Plastic Unbreakable
    </p>
    <p>
      <%= f.radio_button :Material, 'wood' %>Wood Natural
    </p>

  </div>
  <div class="field">
    <%= f.label :Color %><br>
  <!--  <%= f.text_field :Color %>-->
    <p>
    <p>
      <%= f.radio_button :Color, 'metallic' %>Metallic Finish
    </p>
    <p>
      <%= f.radio_button :Color, 'black matte' %>Bold Black
    </p>
    <p>
      <%= f.radio_button :Color, 'Wood Finish' %>Woodish Brown
    </p>

  </div>
  <div class="field">
    <%= f.label :Manufacturer %><br>

      <%= f.select :Manufacturer, options_for_select(%w[ABC_FURNITURES XYZ_WOODWORK INDIAN_FURNITURES ]) %>
  </div>
  <div class="field">
    <%= f.label :Quantity %><br>
    <%= f.number_field :QuantityAvailable %>
  </div>
  <div class="field">
    <%= f.label :Price_Per_Piece %><br>
    <%= f.text_field :Price %>
  </div>
  <div class="field">
    <%= f.label :Users_rating %><br>

    <i style="margin-left:10px;">Enter rating on the scale of 0 - 100 (select one)</i>
    <br>

    <td><%=check_box_tag :Description1, "Needs attention " %></td>
    <%= label_tag(:Description, "0 - 19 (Needs attention)" ) %>
    <br>
    <td><%=check_box_tag :Description2, "Manageable " %></td>
    <%= label_tag(:Description, "20 - 49 (Manageable)" ) %>
    <br>
    <td><%=check_box_tag :Description3, "Good Quality " %></td>
    <%= label_tag(:Description, "50 - 69 (Good Quality)" ) %>
    <br>
    <td><%=check_box_tag :Description4, "Premium Quality " %></td>
    <%= label_tag(:Description, "70 - 89 (Premium Quality)" ) %>
    <br>
    <td><%=check_box_tag :Description5, "Best in the Market " %></td>
    <%= label_tag(:Description, "90 above (Best)" ) %>
    <br>

  </div>
  <div class="actions">
    <%= f.button "CREATE", :type => "submit", :class => "btn btn-default" %>

  </div>

<% end %>

